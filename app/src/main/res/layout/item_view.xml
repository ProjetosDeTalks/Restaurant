<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_16dp"
    android:paddingBottom="@dimen/padding_8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mealName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/playfairdisplay_regular"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:textColor="@color/black_1"
        android:textSize="@dimen/font_48sp"
        android:textStyle="bold"
        tools:text="Pear Salad" />

    <TextView
        android:id="@+id/mealDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_32dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginEnd="@dimen/margin_32dp"
        android:fontFamily="@font/playfairdisplay_regular"
        android:gravity="center"
        android:textColor="@color/grey_1"
        android:textSize="@dimen/font_30sp"
        android:paddingBottom="@dimen/padding_22dp"
        tools:text="Reidâ€™s Orchard Pears / Bitter Greens / Granola / Firefly Farms Black and Blue / Pine Nut Vinaigrette" />

    <TextView
        android:id="@+id/mealPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:textSize="@dimen/font_22sp"
        tools:text="$ 11.50" />

</LinearLayout>